      wrapper.mozRequestFullScreen();
    } else if (wrapper.webkitRequestFullscreen) {
      wrapper.webkitRequestFullscreen();
    } else if (wrapper.msRequestFullscreen) {
      wrapper.msRequestFullscreen();
    }
  }

  function exitFullscreen() {
    // Unlock orientation
    unlockOrientation();
    hideTouchControls();
    hideRotatePrompt();

    if (document.exitFullscreen) {
      document.exitFullscreen();
    } else if (document.mozCancelFullScreen) {
      document.mozCancelFullScreen();
    } else if (document.webkitExitFullscreen) {
      document.webkitExitFullscreen();
    } else if (document.msExitFullscreen) {
      document.msExitFullscreen();
    }
  }

  btn.addEventListener('click', function(e) {
    e.preventDefault();
    e.stopPropagation();
    
    if (isFullscreen()) {
      exitFullscreen();
    } else {
      enterFullscreen();
    }
  });

  // Update button text when fullscreen changes
  function updateButton() {
    if (isFullscreen()) {
      btn.textContent = '‚õ∂ Exit Fullscreen';
      // Show mobile exit button when in fullscreen on mobile
      if (isMobile && mobileExitBtn) {
        mobileExitBtn.style.display = 'block';
        mobileExitBtn.style.animation = 'pulseGlow 2s infinite';
        
        // Show swipe hint once
        if (!swipeHintShown && swipeIndicator) {
          swipeIndicator.style.display = 'block';
          swipeHintShown = true;
          setTimeout(function() {
            swipeIndicator.style.display = 'none';
          }, 3000);
        }
      }

      // Show touch controls on mobile in fullscreen
      if (isMobile && enableTouchControls && inputLayout) {
        showTouchControls();
      }

      // Check orientation and show prompt if needed
      if (isMobile && orientationLock !== 'none' && !checkOrientationMatch()) {
        showRotatePrompt();
      }
    } else {
      btn.textContent = '‚õ∂ Fullscreen';
      // Hide mobile exit button when not in fullscreen
      if (mobileExitBtn) {
        mobileExitBtn.style.display = 'none';
      }
      // Hide touch controls and rotate prompt
      hideTouchControls();
      hideRotatePrompt();
    }
  }

  // Mobile exit button click handler
  if (mobileExitBtn) {
    mobileExitBtn.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      if (isFullscreen()) {
        exitFullscreen();
      }
    });

    // Prevent touch events from propagating to game
    mobileExitBtn.addEventListener('touchstart', function(e) {
      e.stopPropagation();
    });
  }

  // Swipe down to exit fullscreen (on mobile)
  if (wrapper && isMobile) {
    wrapper.addEventListener('touchstart', function(e) {
      if (isFullscreen() && e.touches.length === 1) {
        touchStartY = e.touches[0].clientY;
        touchStartX = e.touches[0].clientX;
      }
    }, { passive: true });

    wrapper.addEventListener('touchmove', function(e) {
      // Allow normal touch interactions in the game
    }, { passive: true });

    wrapper.addEventListener('touchend', function(e) {
      if (isFullscreen() && e.changedTouches.length === 1) {
        const touchEndY = e.changedTouches[0].clientY;
        const touchEndX = e.changedTouches[0].clientX;
        const deltaY = touchEndY - touchStartY;
        const deltaX = Math.abs(touchEndX - touchStartX);
        
        // Swipe down gesture detection (vertical movement > horizontal, downward direction)
        if (deltaY > swipeThreshold && deltaY > deltaX * 1.5) {
          // Only trigger if swipe started from top 20% of screen
          if (touchStartY < window.innerHeight * 0.2) {
