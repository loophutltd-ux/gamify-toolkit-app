{% comment %}
  WebGL Game Block - Embeds a WebGL game with fullscreen support
{% endcomment %}

<div class="webgl-game-container" id="game-container-{{ block.id }}" style="max-width: 100%; margin: 0 auto;">
  {% if block.settings.game_title != blank %}
    <h3 style="text-align: center; margin-bottom: 15px; color: inherit;">
      {{ block.settings.game_title }}
    </h3>
  {% endif %}

  <div class="game-wrapper" id="game-wrapper-{{ block.id }}" 
       style="position: relative; 
              width: 100%; 
              max-width: {{ block.settings.max_width }}px; 
              margin: 0 auto;
              background-color: #000000;
              border-radius: {{ block.settings.border_radius }}px;
              overflow: hidden;">
    
    <div style="width: 100%; 
                padding-bottom: {{ block.settings.height | times: 100.0 | divided_by: block.settings.max_width }}%;
                position: relative;
                border-radius: {{ block.settings.border_radius }}px;">
      
      {% if block.settings.show_play_overlay %}
        <div class="play-overlay" id="play-overlay-{{ block.id }}"
             style="position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    cursor: pointer;
                    z-index: 10;
                    overflow: hidden;
                    {% if block.settings.thumbnail_image %}
                      background-image: url('{{ block.settings.thumbnail_image | img_url: 'master' }}');
                      background-size: cover;
                      background-position: center;
                    {% else %}
                      background: rgba(0, 0, 0, 0.7);
                    {% endif %}">

          <div style="text-align: center; position: relative; z-index: 2;">
            <div style="width: 80px;
                        height: 80px;
                        background: #000000;
                        border-radius: 50%;
                        display: flex;
                        align-items: center;
                        justify-content: center;
                        margin: 0 auto 15px;
                        box-shadow: 0 4px 20px rgba(0,0,0,0.3);
                        transition: transform 0.3s ease;">
              <svg width="30" height="36" viewBox="0 0 30 36" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M0 0L30 18L0 36V0Z" fill="#ffffff"/>
              </svg>
            </div>
            <div style="color: #ffffff;
                        font-size: 24px;
                        font-weight: bold;
                        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
              Play Now
            </div>
          </div>
        </div>
      {% endif %}

      <iframe 
        id="game-iframe-{{ block.id }}"
        {% unless block.settings.show_play_overlay %}
          src="{{ block.settings.game_url }}"
        {% endunless %}
        data-src="{{ block.settings.game_url }}"
        style="position: absolute;
               top: 0;
               left: 0;
               width: 100%;
               height: 100%;
               border: none;
               display: block;"
        allowfullscreen
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; fullscreen"
        loading="lazy">
      </iframe>

      {% if block.settings.show_fullscreen_button %}
        <button 
          class="fullscreen-btn" 
          id="fullscreen-btn-{{ block.id }}"
          aria-label="Toggle Fullscreen"
          style="position: absolute; 
                 top: 10px; 
                 right: 10px; 
                 background: #000000; 
                 color: #ffffff; 
                 border: none; 
                 padding: 10px 15px; 
                 cursor: pointer; 
                 border-radius: 5px;
                 font-size: 14px;
                 font-weight: 600;
                 z-index: 1000;
                 box-shadow: 0 2px 8px rgba(0,0,0,0.2);
                 transition: all 0.3s ease;
                 {% if block.settings.show_play_overlay %}
                   display: none;
                 {% endif %}"
          onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.3)';"
          onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 2px 8px rgba(0,0,0,0.2)';">
          ⛶ Fullscreen
        </button>
      {% endif %}

      <!-- Mobile Exit Button (X) - Only visible in fullscreen on mobile -->
      <button 
        class="mobile-exit-btn" 
        id="mobile-exit-btn-{{ block.id }}"
        aria-label="Exit Fullscreen"
        style="display: none;
               position: fixed;
               top: 15px;
               right: 15px;
               width: 50px;
               height: 50px;
               background: rgba(0, 0, 0, 0.7);
               color: #fff;
               border: 2px solid rgba(255, 255, 255, 0.5);
               border-radius: 50%;
               font-size: 24px;
               font-weight: bold;
               cursor: pointer;
               z-index: 10001;
               touch-action: manipulation;
               -webkit-tap-highlight-color: transparent;
               box-shadow: 0 4px 15px rgba(0,0,0,0.4);">
        ✕
      </button>

      <!-- Mobile Swipe Indicator - Shows swipe down hint -->
      <div 
        class="swipe-indicator" 
        id="swipe-indicator-{{ block.id }}"
        style="display: none;
               position: fixed;
               top: 50%;
               left: 50%;
               transform: translate(-50%, -50%);
               background: rgba(0, 0, 0, 0.8);
               color: #fff;
               padding: 20px 30px;
               border-radius: 15px;
               font-size: 16px;
               text-align: center;
               z-index: 10002;
               pointer-events: none;
               animation: fadeOut 2s forwards 1s;">
        <div style="font-size: 30px; margin-bottom: 10px;">↓</div>
        Swipe down to exit
      </div>
    </div>
  </div>
</div>

